
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
            android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            tools:context="interviewtest.bigyan.com.interviewtest.MainActivityToSearch"
            android:id="@+id/mainRelativeLayout">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Artist Name"
                android:id="@+id/artistToSearch"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:textColor="@color/titletextcolor"
                android:layout_marginTop="70dp"
                android:textSize="25dp"
                android:textStyle="bold" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/artistFirstNameEditText"
                android:layout_marginTop="35dp"
                android:layout_below="@+id/artistToSearch"
                android:layout_centerHorizontal="true"
                android:hint="Artist First Name" />


            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Ok"
                android:id="@+id/okButton"
                android:background="@color/buttonBackgroundColor"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_below="@+id/artistLastNameEditText"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="62dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/artistLastNameEditText"
                android:layout_below="@+id/artistFirstNameEditText"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:hint="Artist Last Name"
                android:layout_marginTop="15dp" />
        </RelativeLayout>

    </ScrollView>