<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="interviewtest.bigyan.com.interviewtest.DetailsView"
    android:id="@+id/detailsRelativeLayout"
    android:background="@color/detailsViewBackground">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Title"
        android:textColor="@color/detailsViewTitleColor"
        android:id="@+id/collectionTitleTextView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="45dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="CollectionName"
        android:textColor="@color/detailsViewDescColor"
        android:id="@+id/collectionNameTextView"
        android:textSize="25dp"
        android:textStyle="italic"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/collectionTitleTextView"
        android:layout_alignParentTop="true"
        android:layout_marginTop="65dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="CollectionPrice"
        android:textColor="@color/detailsViewDescColor"
        android:id="@+id/collectionPriceTextView"
        android:textStyle="italic"
        android:textSize="25dp"
        android:layout_below="@+id/collectionNameTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="TrackPrice"
        android:id="@+id/trackPriceTextView"
        android:layout_below="@+id/collectionPriceTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="italic"
        android:textSize="25dp"
        android:layout_marginTop="15dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Return"
        android:background="@color/buttonBackgroundColor"
        android:id="@+id/backButton"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/trackPriceTextView"
        android:layout_alignEnd="@+id/trackPriceTextView"
        android:padding="@dimen/activity_horizontal_margin"/>
</RelativeLayout>
